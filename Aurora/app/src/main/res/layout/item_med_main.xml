<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/notificationIconImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_notification_layer_list" />

    <TextView
        android:id="@+id/medicationTimeTextView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/notificationIconImageView"
        android:text="09:00 AM"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/medicationNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/medicationTimeTextView"
        android:text="Medication 1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/medicationDosageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medicationTimeTextView"
        android:layout_alignStart="@id/medicationTimeTextView"
        android:layout_marginTop="4dp"
        android:text="1.00 Capsule"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/medicationTypeImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@id/medicationTimeTextView"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_outline_medical_services_24"
        app:tint="@color/purple_700" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/medicationDosageTextView"
        android:layout_marginTop="12dp"
        android:background="@android:color/darker_gray" />


</RelativeLayout>