<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerConstraintLayout"
    android:layout_width="match_parent"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/medicineFormImageView"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/medicineNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Adol"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/medicineFormImageView"
        app:layout_constraintStart_toEndOf="@id/medicineFormImageView"
        app:layout_constraintTop_toTopOf="@id/medicineFormImageView" />

    <TextView
        android:id="@+id/medicineStrengthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 mg"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/medicineNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/medicineNameTextView" />

    <TextView
        android:id="@+id/medicineInstructionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Before eating"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/medicineStrengthTextView"
        app:layout_constraintStart_toEndOf="@id/medicineStrengthTextView"
        app:layout_constraintTop_toTopOf="@id/medicineStrengthTextView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/browser_actions_bg_grey"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medicineInstructionsTextView" />.
</androidx.constraintlayout.widget.ConstraintLayout>