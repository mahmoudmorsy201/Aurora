<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/medicineFormImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="24dp"
        android:src="@drawable/ic_medicine_pill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/medicineNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Adol"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/medicineFormImageView"
        app:layout_constraintStart_toEndOf="@id/medicineFormImageView"
        app:layout_constraintTop_toTopOf="@id/medicineFormImageView" />

    <TextView
        android:id="@+id/medicineStrengthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="1 mg"
        app:layout_constraintBottom_toBottomOf="@id/medicineNameTextView"
        app:layout_constraintStart_toEndOf="@id/medicineNameTextView"
        app:layout_constraintTop_toTopOf="@id/medicineNameTextView" />

    <TextView
        android:id="@+id/medicineInstructionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Before eating"
        app:layout_constraintBottom_toBottomOf="@id/medicineStrengthTextView"
        app:layout_constraintStart_toEndOf="@id/medicineStrengthTextView"
        app:layout_constraintTop_toTopOf="@id/medicineStrengthTextView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>